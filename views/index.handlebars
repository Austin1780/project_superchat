<body>
<div class="jumbotron text-center">
  <h1>Super Chat</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h3 class="message">Messages</h3>
      {{#each userMessages as |userMessage|}}
      <p>{{userMessage.user}}</p>
      <p>{{userMessage.userMessage}}</p>
      {{/each}}
    </div>
    <div class="col-sm-4">
        <form method="post" action="/">
      <div class="form-group">
          <label for="comment"><div class="newp"><h4>New Post:</h4></div></label>
  <textarea class="form-control" rows="5" id="comment" name="userMessage"></textarea>
</div>
    </div>
         <button type="submit" class="btn btn-default">Submit</button>
        </form>
    <div class="col-sm-4">
    
    </div>
  </div>
</div>
</body>
